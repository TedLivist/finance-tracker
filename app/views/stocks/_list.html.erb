<table class="table table-bordered table-hover col-9 mt-3">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
        <td><%= link_to "Remove", '#', method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>