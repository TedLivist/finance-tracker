<h1>Friends</h1>

<div class="search-area">
  <h3>Search Friend</h3>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 pr-0">
        <%= text_field_tag :friend, params[:friend], placeholder: "Enter friend", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 pl-0">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% else %>
  <h3>You have no friends</h3>
<% end %>